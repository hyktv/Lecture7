<Window x:Class="Lecture7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Button, Textbox, Label, Rich textbox -->
    <StackPanel> <!-- The Layout Tags -->
        <!-- The 3 layouts: Grid, Canvas, StackPanel-->
        <Label Content="First Name"/>
        <TextBox Name="txtGerald" Text="This uses the property text"/>
        <Button Content="Say Hi Gerald" Name="btnHiGerald" Click="btnHiGerald_Click"/>

    </StackPanel>
</Window>
    
